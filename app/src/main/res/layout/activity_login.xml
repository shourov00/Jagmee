<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context="com.jagmee.app.Accounts.Login_A">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_view"
        android:visibility="gone"
        android:background="@color/black"
        android:alpha="0.4"
        android:orientation="vertical"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="230dp"
        android:background="@color/black75"
        android:id="@+id/login_details_RL1_id">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Goback"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_clear_black_24dp"

            android:padding="5dp"
            android:layout_margin="5dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_title_txt"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:visibility="gone"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_up_for"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:fontFamily="serif"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a profile, follow other creators\n build your fan following by creating\n your own videos"
                android:textColor="@color/cyan"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13sp"

                />


        </LinearLayout>



        <RelativeLayout
            android:id="@+id/login_details_RL3_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="24dp">


            <HorizontalScrollView
                android:id="@+id/login_details_scrollview_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/facebook_btn"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_facebook"
                        android:visibility="gone"

                        />

                    <ImageView
                        android:id="@+id/google_btn"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_google" />



                </LinearLayout>


            </HorizontalScrollView>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_terms_condition_txt"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:layout_marginBottom="55dp"
            android:textColor="@color/dimgray"

            android:text="By signing up, you confirm that you agree to our \n Terms of Use and have read and understood \n our Privacy Policy."
            android:gravity="center"
            android:layout_alignParentBottom="true"
            />




    </RelativeLayout>

</RelativeLayout>
