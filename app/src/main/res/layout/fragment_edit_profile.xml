<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/black75"
    android:fitsSystemWindows="true"
    android:paddingTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jagmee.app.Profile.Edit_Profile_F">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/black75">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            android:background="@color/black75">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black75">

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentLeft="true"
                    android:background="@android:color/transparent"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitStart"
                    android:id="@+id/Goback"
                    android:tint="@color/white"
                    android:src="@drawable/ic_back"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:fontFamily="sans-serif-condensed-medium"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:id="@+id/save_btn"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/cyan"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/darkblack"
                    android:layout_alignParentBottom="true"
                    />



            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="20dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">


                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/find_user_male" />

                    <ImageButton
                        android:id="@+id/upload_pic_btn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_camera_icon" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="20dp"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"

                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/d_round_black75"
                    android:minHeight="45dp"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_profile_red"
                        android:tint="@color/white"

                        />

                    <EditText
                        android:id="@+id/username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:background="@color/transparent"
                        android:hint="Username"
                        android:inputType=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray"
                        android:textSize="14dp"



                        />

                    <!--                  <LinearLayout-->
                    <!--                      android:layout_width="match_parent"-->
                    <!--                      android:layout_height="0.5dp"-->
                    <!--                      android:layout_marginTop="49dp"-->
                    <!--                      android:background="@color/cyan"-->
                    <!--                      android:layout_marginStart="25dp"-->
                    <!--                      />-->

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="20dp"
                    android:text="Full Name"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/d_round_black75"
                        android:minHeight="45dp">

                        <ImageView
                            android:id="@+id/profile_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_profile_red"
                            android:tint="@color/white"

                            />

                        <EditText
                            android:id="@+id/firstname_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/profile_icon"
                            android:background="@color/transparent"
                            android:backgroundTint="@color/transparent"
                            android:hint="First name"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_gray"
                            android:textSize="14dp" />

                        <!--                      <LinearLayout-->
                        <!--                          android:layout_width="match_parent"-->
                        <!--                          android:layout_height="0.5dp"-->
                        <!--                          android:layout_marginTop="49dp"-->
                        <!--                          android:layout_marginLeft="12dp"-->
                        <!--                          android:background="@color/graycolor"-->
                        <!--                          android:layout_toRightOf="@+id/profile_icon"/>-->

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/d_round_black75"
                        android:minHeight="45dp">

                        <ImageView
                            android:id="@+id/profile_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_profile_red"
                            android:tint="@color/white"

                            />

                        <EditText
                            android:id="@+id/lastname_edit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/profile_icon"
                            android:background="@color/transparent"
                            android:backgroundTint="@color/transparent"
                            android:hint="Last name"
                            android:textColor="@color/white"
                            android:textColorHint="@color/light_gray"
                            android:textSize="14dp" />

                        <!--                      <LinearLayout-->
                        <!--                          android:layout_width="match_parent"-->
                        <!--                          android:layout_height="0.5dp"-->
                        <!--                          android:layout_marginTop="49dp"-->
                        <!--                          android:layout_marginLeft="12dp"-->
                        <!--                          android:background="@color/graycolor"-->
                        <!--                          android:layout_toRightOf="@+id/profile_icon"/>-->

                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <!--                  <TextView-->
                    <!--                      android:layout_width="match_parent"-->
                    <!--                      android:layout_height="wrap_content"-->
                    <!--                      android:text="Gender"-->
                    <!--                      android:textSize="16dp"-->
                    <!--                      android:padding="10dp"-->
                    <!--                      android:elevation="0.5dp"-->
                    <!--                      android:textStyle="italic"-->
                    <!--                      android:background="@color/lightgraycolor"-->
                    <!--                      android:textColor="@color/dimgray"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="20dp"
                        android:text="Gender"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed-medium"

                        />

                    <RadioGroup
                        android:id="@+id/edit_pro_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <RadioButton
                            android:id="@+id/male_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Male"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:theme="@style/RadioButton" />

                        <RadioButton
                            android:id="@+id/female_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="female"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:theme="@style/RadioButton" />
                    </RadioGroup>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"

                    >
                    <!--                <TextView-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:text="Bio"-->
                    <!--                    android:textSize="16dp"-->
                    <!--                    android:padding="10dp"-->
                    <!--                    android:elevation="0.5dp"-->
                    <!--                    android:textStyle="italic"-->
                    <!--                    android:background="@color/lightgraycolor"-->
                    <!--                    android:textColor="@color/dimgray"/>-->
                    <!--                  -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="20dp"
                        android:elevation="0.5dp"
                        android:text="Your bio (80 char)"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textStyle="bold"



                        />

                    <EditText
                        android:id="@+id/user_bio_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/d_round_black75"
                        android:gravity="top|start"
                        android:hint="Write your bio in 80 characters"
                        android:imeOptions="flagNavigateNext"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:maxLength="80"
                        android:maxLines="5"
                        android:nextFocusForward="@+id/jobtitle_edit"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:scrollbars="vertical"
                        android:textColor="@color/white"
                        android:textColorHint="@color/light_gray"
                        android:textSize="15dp"

                        />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>


</FrameLayout>
