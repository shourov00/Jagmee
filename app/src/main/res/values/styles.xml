<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>



    <style name="white_status" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
      </style>



    <style name="black_status" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/cyan</item>
        <item name="android:navigationBarColor">@color/black</item>


        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>


    </style>



    <style name="transparent_status" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">false</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>


    </style>



    <style name="Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="white_progressbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>




    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/white</item>

    </style>

    <style name="MySeekBar2" parent="Widget.AppCompat.SeekBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:progressBackgroundTint" tools:ignore="NewApi">@color/black</item>

    </style>


    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/cyan</item>
        <item name="android:textColorSecondary">@color/graycolor</item>
        <item name="colorControlNormal">@color/graycolor</item>
    </style>

    <style name="Progressbar_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cyan</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">

        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>


    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/cyan</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/cyan</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/d_top_left_right_radius_dark</item>
    </style>


    //..................................ali...........................

    <style name="Theme.MyAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--        <item name="android:windowBackground">@drawable/alivc_lanch_loading</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="menuDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/alivc_common_bg_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- 为了避免在有 NavigationBar 的手机上 Dialog 从 NavigationBar 底部上来。去掉 Dialog 的动画，使用 View 的动画。-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">0dp</item>
    </style>

    <!-- about dialog  start-->
    <style name="AlivcDialogButtonStyle_Group">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>
    <style name="AlivcDialogButtonStyle_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/alivc_common_font_white</item>
    </style>

    <style name="AlivcDialogButtonStyle_Icon">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_gravity">center|bottom</item>
    </style>

    <!-- about dialog  end-->


    <style name="expendText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/alivc_common_font_13</item>
        <item name="android:textColor">@color/alivc_common_font_white</item>
    </style>

    <style name="collapse" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/alivc_common_font_15</item>
        <item name="android:textColor">@color/alivc_common_font_white</item>
    </style>


    <style name="AlivcLittlePublishEditTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/alivc_common_bg_gray_darker</item>
        <item name="colorControlActivated">@color/alivc_common_cyan_light</item>
    </style>


</resources>
